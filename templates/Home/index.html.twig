{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }} |
    {{ parent() }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <header class="sticky-top">
        <h1>Bibliothèque Digitale <i class="bi bi-book"></i></h1>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <a href="{{ path('author.index') }}" class="btn btn-primary">Tous les Auteurs</a>
            <a href="{{ path('book.index')}}" class="btn btn-primary">Tous les Livres</a>
            <a href="{{ path('category.index') }}" class="btn btn-primary">Catégories disponibles</a>
        </nav>
    <header>

    <h2 class="mt-4">Les bestsellers</h2>
    {% for book in books %}
                <div class="container text-center">
            
            <div class="shelf">
            <!-- Livre 1 -->
            <div class="book">
                <div class="book-info">
                    <h5>{{ book.title }}</h5>
                    <h6>Catégorie: {{ book.categories[0].name }}</h6>
                    <p>
                        Auteur: {{ book.author.firstname }} {{ book.author.lastname }} 
                    </p>
                </div>
                
            </div>

        </div>
    {% endfor %}
</div>
{% endblock %}
