{% extends 'base.html.twig' %}

{% block title %}
    Auteurs |
    {{ parent() }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ page_title }}</h1>
    <a href="{{ path('author.create') }}" class="btn btn-primary">Voulez-vous ajouter un Auteur ?</a>
    <a href="/" class="btn btn-dark">Retourner à la Bibliothèque</a>

        <div class="row gy-4 mt-4 text-center">
		{% for author in authors %}
                    <div class="author-name">
                        {{ author.firstname}} {{ author.lastname}}

                    </div>
                    <a href="{{ path('author.update', {id: author.id}) }}" class="btn btn-warning">Modifier</a> {# Update Author #}

                    

                    {# Delete Author #}
                    <form action="{{ path('author.delete', {id: author.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sur de vouloir supprimer l'Auteur?')">
                        <input type="hidden" name="delete_author" value="{{ author.id }}">
                        <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i>
                            Supprimer
                        </button>
                    </form>

     	{% endfor %}
	    </div>       


</div>
{% endblock %}
